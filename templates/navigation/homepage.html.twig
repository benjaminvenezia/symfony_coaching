        <div class="col mx-auto">
            
            <h2 class="text-white">Accéder à mon groupe</h2>

            <a class="btn btn-primary btn-lg" href="{{path('navigation_logincoach')}}">Accéder à mon groupe</a>

        </div>
    </div>
   </div>
