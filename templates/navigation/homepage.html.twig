{% extends "base.html.twig" %}

{% block title %}
    Création d'un Evenement
{% endblock %}
{% block body %}
   <h1 class="mb-5 mt-5">Bienvenue sur Coach</h1>

   <div class="container text-white shadow-lg">
      <div class="row bg-secondary p-5 ">
        <div class="col-5 m-5">
               <h2 class="text-white">Créer votre événement</h2>
               {{ form_start(formView) }}
               {{ form_row(formView.name) }}
               {{ form_row(formView.email) }}
               {# {{ form_row(formView.adminLinkToken)}} #}
               {{ form_errors(formView) }}

                <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i>Créer l'événement</button>
               {{ form_end(formView) }}
        </div>
        <div class="col m-5">
            
            <h2 class="text-white">Accéder à votre événement</h2>

            <a class="btn btn-primary btn-lg" href="{{path('navigation_logincoach')}}">Je manage mon événement</a>
