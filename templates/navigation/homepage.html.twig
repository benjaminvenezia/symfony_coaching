{% extends "base.html.twig" %}

{% block title %}
    Création d'un Evenement
{% endblock %}
{% block body %}
   <h1 class="mb-5 mt-5">Bienvenue sur CoachMe</h1>

   <div class="container shadow-lg blur">

    <div class="position-absolute shadow-sm text-white h4" style="background-color: lightgray; top: 0; left: 0; padding: 15px 30px; border-radius: 0 0 50px 0 ">
        <p>Je suis un coach!</p>
    </div>
    
      <div class="row p-5 ">
        <div class="col-5 m-5">
               <h2>Créer votre événement</h2>
               {{ form_start(formView) }}
               {{ form_row(formView.name) }}
               {{ form_row(formView.email) }}
               {# {{ form_row(formView.adminLinkToken)}} #}
               {{ form_errors(formView) }}

                <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i>Créer l'événement</button>
               {{ form_end(formView) }}
        </div>
        <div class="col m-5">
            
            <h2>Accéder à votre événement</h2>

            <a class="btn btn-primary btn-lg" href="{{path('navigation_logincoach')}}">Je manage mon événement</a>
            {# {% if events|length > 0 %}
                <ul>
                    {% for event in events %}
                        <li><a href="{{ path('event_show', {'adminToken': event.adminLinkToken}) }}">{{ event.name }}</a></li>
                    {% endfor %}
                </ul>
            {% endif %} #}

        </div>
      <div class="row mt-5">
       {% include "shared/_assurance.html.twig" with {
           "color" : "primary", 
           "icon" : "fas fa-truck", 
           "text" : "Augmentez votre rentabilité en Coaching et managez vos groupes avec souplesse!" 
        } %}

        {% include "shared/_assurance.html.twig" with {
           "color" : "success", 
           "icon" : "fas fa-check", 
           "text" : "Notre service est totalement gratuit, satisfait et nul besoin de remboursement donc." 
        } %}

        {% include "shared/_assurance.html.twig" with {
           "color" : "warning", 
           "icon" : "fas fa-lock", 
           "text" : "Nous sommes garants de la sécurité de vos données, aucune données sensible requise." 
        } %}
     </div>
    </div>
   </div>
   <div class="container shadow-lg mt-5 mb-5 blur pt-5">
    <div class="position-absolute shadow-sm text-white h4 " style="background-color: lightgray; top: 0; left: 0; padding: 15px 30px; border-radius: 0 0 50px 0 ">   
        <p>Je fais parti d'un groupe!</p>
    </div>
    
      <div class="row p-5 ">
       
        <div class="col mx-auto">
            
            <p><span style="color:gold;"><i class="fa-solid fa-circle-info"></i></span> C'est au créateur de l'événement de transmettre la clé de connexion.</p>
            
            <h2>Accéder à mon groupe</h2>

            <a class="btn btn-primary btn-lg" href="{{path('navigation_loginuser')}}">Accéder à mon groupe</a>

        </div>
    </div>
   </div>
{% endblock %}