{% extends "base.html.twig" %}

{% block title %}
    Création d'un Evenement
{% endblock %}
{% block body %}
    <h1>Bienvenue sur Coach</h1>

    
   <div class="container">
      <div class="row">
         <div class="col">
               <h2>Créer votre événement</h2>
               {{ form_start(formView) }}
               {{ form_row(formView.name) }}
               {{ form_row(formView.email) }}
               {{form_row(formView.adminLinkToken)}}
               {{ form_errors(formView) }}
                <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i>Créer l'événement</button>
         </div>
        <div class="col">
               <h2>Evenements à venir!</h2>

            {% if events|length > 0 %}
            <ul>
                {% for event in events %}
                    <li><a href="{{ path('groups_show', {'adminToken': event.adminLinkToken}) }}">{{ event.name }}</a></li>
                {% endfor %}
            </ul>
            {% endif %}
        </div>
         </div>
    
   </div>
    {{ form_end(formView) }}
{% endblock %}