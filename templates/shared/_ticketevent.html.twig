<div class="col mb-2">
	<div class="card">
        <div class="card-header text-center">
			<h3 class="card-text h5">{{item.title}}</h3>
			<p class="card-text">{{item.createdAt|date("d/m/Y")}}</p>
		</div>
		<div class="card-body">
            <p class="card-text">{{item.request}}</p>
            
            <div class="flex">
                <a href="{{ path('ticket_changestatus', {ticketId: item.id, linkToken: event.adminLinkToken, idStatus: 6}) }}" class="btn btn-sm btn-outline-info btn-sm">Réglé!</a>
                <a class="btn btn-sm btn-outline-secondary btn-sm">Répondre</a>
            </div>
		</div>
	</div>
</div>

